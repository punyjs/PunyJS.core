{
    "name": "punyjs-core"
    , "description": "A library of core dependencies"

    , "config": {
        "strict": true
    }

    , "iocNamePrefix": "ioc-controller"
    , "iocType": "monolith"
    , "appType": "ioc.${iocType}"

    , "base": [
        "{PunyJS.core}/base.dtree.json"
        , "{PunyJS.core.data}/uuid.dtree.json"
        , "{PunyJS.core.security}/dtree.json"
        , "{PunyJS.core.proxy}/dtree.json"
        , "{PunyJS.core.event}/dtree.json"
        , "{PunyJS.core.net.http}/dtree.json"
    ]

    , "entries": [
        "{PunyJS.core}/node.manifest.json"
        , "{PunyJS.core}/browser.manifest.json"
        , "{PunyJS.ioc}/manifests/base.manifest.json"
    ]
}